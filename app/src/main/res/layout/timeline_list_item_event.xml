<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="8dp"
    android:layout_marginTop="12dp"
    android:layout_marginStart="12dp"
    android:layout_marginEnd="12dp"
    android:background="@drawable/timeline_custom_background">

    <RelativeLayout
        android:id="@+id/box"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginStart="5dp">
        <TextView
            android:id="@+id/timeline_event_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Event Title"
            android:textColor="@color/black"/>
        <TextView
            android:id="@+id/timeline_event_start_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/timeline_event_title"
            android:layout_marginStart="12dp"
            android:text="Event Start Date"
            android:textColor="@color/black"/>
        <TextView
            android:id="@+id/timeline_event_press_to_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="5dp"
            android:layout_alignParentRight="true"
            android:text="Press for Details"
            android:textColor="@color/dark_vento_grey"/>
    </RelativeLayout>
</LinearLayout>

