<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:padding="8dp"
    android:layout_marginTop="12dp"
    android:layout_marginStart="12dp"
    android:layout_marginEnd="12dp"
    android:background="@drawable/user_custom_background"
    android:gravity="center_vertical">

    <RelativeLayout
        android:id="@+id/box"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginStart="5dp">

        <LinearLayout
            android:id="@+id/photo_username_ll"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_vertical">
            <ImageView
                android:id="@+id/user_image_iv"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:background="@drawable/img"/>

            <TextView
                android:id="@+id/search_user_username_tv"
                android:layout_width="85dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="12dp"
                android:layout_toRightOf="@+id/user_image_iv"
                android:text="Username"
                android:textSize="18dp"/>
        </LinearLayout>
    </RelativeLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:layout_marginLeft="25dp">
        <Button
            android:id="@+id/accept_friend_request_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:backgroundTint="@color/green_button"
            android:text="Accept"
            android:textColor="@color/white" />
        <Button
            android:id="@+id/deny_friend_request_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:backgroundTint="@color/red_button"
            android:layout_marginLeft="5dp"
            android:text="Deny"
            android:textColor="@color/white" />
    </LinearLayout>
</LinearLayout>

